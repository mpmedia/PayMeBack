<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>PayMeBack</title>

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <meta name="description" content="Manage account between two persons">
        <meta name="author" content="Maxime AILLOUD">

        <link href="{{ app.request.basepath }}/assets/css/bootstrap.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/assets/css/bootstrap-responsive.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/assets/css/style.css" rel="stylesheet">

        <link rel="shortcut icon" href="{{ app.request.basepath }}/assets/img/favicon.ico">
    </head>

    <body class="container-fluid">

        <header id="page_header" class="row-fluid">
            <h1>PayMeBack</h1>
        </header>
        <div class="row-fluid">
            <aside class="span2">
                <div class="accordion" id="accordion2">
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">2014</a>
                        </div>
                        <div id="collapseOne" class="accordion-body collapse">
                            <div class="accordion-inner">
                                <ul class="nav nav-list">
                                    <li><a href="#">Janvier</a></li>
                                    <li><a href="#">Février</a></li>
                                    <li><a href="#">Mars</a></li>
                                    <li><a href="#">Avril</a></li>
                                    <li class="active"><a href="#">Mai</a></li>
                                    <li><a href="#">Juin</a></li>
                                    <li><a href="#">Juillet</a></li>
                                    <li><a href="#">Août</a></li>
                                    <li><a href="#">Septembre</a></li>
                                    <li><a href="#">Octobre</a></li>
                                    <li><a href="#">Novembre</a></li>
                                    <li><a href="#">Décembre</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">2013</a>
                        </div>
                        <div id="collapseTwo" class="accordion-body collapse">
                            <div class="accordion-inner">
                                <ul class="nav nav-list">
                                    <li><a href="#">Janvier</a></li>
                                    <li><a href="#">Février</a></li>
                                    <li><a href="#">Mars</a></li>
                                    <li><a href="#">Avril</a></li>
                                    <li class="active"><a href="#">Mai</a></li>
                                    <li><a href="#">Juin</a></li>
                                    <li><a href="#">Juillet</a></li>
                                    <li><a href="#">Août</a></li>
                                    <li><a href="#">Septembre</a></li>
                                    <li><a href="#">Octobre</a></li>
                                    <li><a href="#">Novembre</a></li>
                                    <li><a href="#">Décembre</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-group">
                        <div class="accordion-heading">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">2012</a>
                        </div>
                        <div id="collapseThree" class="accordion-body collapse in">
                            <div class="accordion-inner">
                                <ul class="nav nav-list">
                                    <li><a href="#">Janvier</a></li>
                                    <li><a href="#">Février</a></li>
                                    <li><a href="#">Mars</a></li>
                                    <li><a href="#">Avril</a></li>
                                    <li class="active"><a href="#">Mai</a></li>
                                    <li><a href="#">Juin</a></li>
                                    <li><a href="#">Juillet</a></li>
                                    <li><a href="#">Août</a></li>
                                    <li><a href="#">Septembre</a></li>
                                    <li><a href="#">Octobre</a></li>
                                    <li><a href="#">Novembre</a></li>
                                    <li><a href="#">Décembre</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>
            <section class="span10">
                <section class="row-fluid">
                    <div class="span12">
                        {% for key, flash in app.session.getFlashes() %}
                            <div class="alert alert-{{ key }}">
                                <button class="close" data-dismiss="alert">×</button>
                                {{ flash }}
                            </div>
                        {% endfor %}
                        {% for flashMessage in app.session.flashbag.get('notice') %}
                            <div class="flash-notice">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                        <form action="{{ path('add_category') }}" class="form-inline well" method="post" accept-charset="utf-8">
                            <input placeholder="Ajouter une catégorie" type="text" name="category_title" required="required" />
                            <input type="submit" class="btn" value="Ajouter" />
                        </form>
                        <div class="row-fluid">
                            {% for userId, user in datas.users %}
                                {% include "user-spending.twig" %}
                            {% endfor %}
                        </div>
                    </div>
                </section>
                <section class="well" id="resume">
                    {% include "resume-spending.twig" %}
                </section>
            </section>
        </div>

        <script src="{{ app.request.basepath }}/assets/js/jquery.js"></script>
        <script src="{{ app.request.basepath }}/assets/js/bootstrap.min.js"></script>
        <script src="{{ app.request.basepath }}/assets/js/confirmDelete.js"></script>
        <script src="{{ app.request.basepath }}/assets/js/application.js"></script>

    </body>
</html>



