<div class="span6 well user_data">
    <h1>{{ user.name }}</h1>
    <table class="table table-bordered table-condensed">
        <caption>Dépenses</caption>
        <thead>
            <tr>
                <th>Catégorie</th>
                <th>Montant</th>
                <th style="width: 22%">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categoryId, category in user.categories %}
                <tr>
                    <td>{{ category.title }}</td>
                    <td>{{ category.amount }}&#8364;</td>
                    <td>
                        <button class="btn btn-success btn-mini btn_modal add_spending_user" rel="tooltip" title="Ajouter une dépense à la catégorie" data-related-form="new_spending_user{{ userId }}_category{{ categoryId }}">
                            <i class="icon-plus icon-white"></i>
                        </button>
                        <button class="btn btn-danger btn-mini btn_modal delete_category" rel="tooltip" title="Supprimer la catégorie" data-placement="bottom">
                            <i class="icon-trash icon-white"></i>
                        </button>
                    </td>
                </tr>
                <tr id="new_spending_user{{ userId }}_category{{ categoryId }}" class="new_spending">
                    <td colspan="3">
                        <form action="{{ path('add_spending', {'user': userId, 'category': categoryId}) }}" class="form-inline" method="post" accept-charset="utf-8">
                            <input type="text" name="spending_description" placeholder="description" required="required" />
                            <div class="input-append">
                                <input type="text" name="spending_amount" placeholder="montant" required="required" /><span class="add-on">&#8364;</span>
                            </div>
                            <button type="submit" class="btn">Ajouter</button>
                        </form>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <table class="table table-bordered table-condensed">
                            <tbody>
                                {% for spending in category.spendings %}
                                    <tr>
                                        <td>{{ spending.description }}</td>
                                        <td>{{ spending.amount }}&#8364;</td>
                                        <td>
                                            <a class="btn btn-danger btn-mini btn-mini btn_modal" href="#delete_spending" data-toggle="modal">
                                                <i class="icon-trash icon-white"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr><td colspan="3">Aucune dépense.</td></tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3">Aucune catégorie.</td></tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <td colspan="2">{{ user.totalSpendings}}&#8364;</td>
            </tr>
        </tfoot>
    </table>

    <table class="table table-bordered table-condensed"">
        <caption>
            Avances
            <a class="btn btn-success btn-mini btn_modal" href="#add_advance" data-toggle="modal">
                <i class="icon-plus icon-white"></i>
            </a>
        </caption>
        <thead>
            <th>Description</th>
            <th>Montant</th>
        </thead>
        <tbody>
            {% for advance in user.advances %}
                <tr>
                    <td>{{ advance.description }}</td>
                    <td>{{ advance.amount }}&#8364;</td>
                    <td>
                        <a class="btn btn-danger btn-mini btn-mini btn_modal" href="#delete_advance" data-toggle="modal">
                            <i class="icon-trash icon-white"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3">Aucune avance.</td></tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <td colspan="2">{{ user.totalAdvances }}&#8364;</td>
            </tr>
        </tfoot>
    </table>
</div>
