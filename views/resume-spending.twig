<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th></th>
        {% for user in datas.users %}
            <th>{{ user.name }}</th>
        {% else %}
            <td colspan="2">Aucun utilisateur</td>
        </tr>
        {% endfor %}
    </thead>
    <tbody>
        <tr>
            <td>Dépenses</td>
        {% for user in datas.users %}
            <td>{{ user.totalSpendings }}&#8364;</td>
        {% else %}
            <td colspan="2">Aucun utilisateur</td>
        {% endfor %}
        </tr>
        <tr>
            <td>Avances</td>
        {% for user in datas.users %}
            <td>{{ user.totalAdvances }}&#8364;</td>
        {% else %}
            <td colspan="2">Aucun utilisateur</td>
        {% endfor %}
        </tr>
    </tbody>
</table>
